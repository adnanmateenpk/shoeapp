<%= error_messages_for(@product) %>
<table summary="Product form fields">
  <tr>
    <th><%= f.label(:mod_name,"Name")%></th>
    <td><%= f.text_field(:mod_name)%></td>
  </tr>
  <tr>
    <th><%= f.label(:sku,"SKU")%></th>
    <td><%= f.text_field(:sku)%></td>
  </tr>
  <tr>
    <th><%= f.label(:position,"Position")%></th>
    <td><%= f.select(:position, 1..@product_count)%></td>
  </tr>
  <tr>
    <th><%= f.label(:status) %></th>
    <td><%= f.select(:status, options_for_select([['Published',1],['Unpublished',0]],2)) %></td>
  </tr>
  <tr>
    <th><%= f.label(:description) %></th>
    <td><%= f.text_area(:description, :size => '40x10') %></td>
  </tr>
</table>
